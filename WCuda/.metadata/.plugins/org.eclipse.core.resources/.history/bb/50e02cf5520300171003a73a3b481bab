#pragma once

#include <math.h>
#include "MathTools.h"

#include "ColorTools_CPU.h"
using namespace cpu;

/*----------------------------------------------------------------------*\
 |*			Declaration 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

class MandelbrotMath
    {
	/*--------------------------------------*\
	|*		Constructeur		*|
	 \*-------------------------------------*/

    public:

	MandelbrotMath(uint w)
	    {
	    this->dim2 = w / 2;
	    }

	// constructeur copie: pas besoin car pas attribut ptr

	virtual ~MandelbrotMath(void)
	    {
	    // rien
	    }

	/*--------------------------------------*\
	|*		Methode			*|
	 \*-------------------------------------*/

    public:

	void colorIJ(uchar4* ptrColorIJ, int i, int j, float t)
	    {
	    uchar levelGris;

	    uchar ptrNbIteration;
	    f(j, i, t, &ptrNbIteration);

	    ptrColorIJ->x = nbIteration;
	    ptrColorIJ->y = nbIteration;
	    ptrColorIJ->z = nbIteration;

	    ptrColorIJ->w = 255; //opaque
	    }

    private:

	// Doit sortir le nombre d'it√©rations
	int f(int i, int j, float t, uchar* ptrNbIteration)
	    {
	    float dijResult;
	    dij(i, j, &dijResult);
	    *ptrNbIteration = 128 + 127 * (cos(dijResult / 10.0f - t / 7.0f) / (dijResult / 10.0f + 1.0f));
	    }

	void dij(int i, int j, float* ptrResult)
	    {
	    //TODO cf fonction math pdf
	    float fi = i - dim2 / 2;
	    float fj = j - dim2 / 2;
	    *ptrResult = sqrt(fi * fi + fj * fj);
	    }

	/*--------------------------------------*\
	|*		Attribut			*|
	 \*-------------------------------------*/

    private:

	// Tools
	double dim2;

    };

/*----------------------------------------------------------------------*\
 |*			End	 					*|
 \*---------------------------------------------------------------------*/
