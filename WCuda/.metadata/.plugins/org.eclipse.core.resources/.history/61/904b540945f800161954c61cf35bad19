double piOMPEntrelacerPromotionTab(int n)
    {
    const int NB_THREAD = OmpTools::setAndGetNaturalGranularity();
    const double DX = 1 / (double) n;
    double* tab = new double[NB_THREAD];

    #pragma omp parallel
	{
	const int TID = OmpTools::getTid();
	int s = TID;

	tab[TID] =

	while (s > n)
	    {
	    s += NB_THREAD;
	    double xi = s*DX;
	    tab[TID] = fpi()
	    }
	}

	delete[] tab;

	return somme * DX;
    }

